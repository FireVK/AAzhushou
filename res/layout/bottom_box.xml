<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="68dp"
    android:background="@drawable/bt_box"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/ivBottomLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivBottomRight"
        android:src="@drawable/th_ewallet237"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@id/tvBottomText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivBottomLeft"
        android:layout_centerInParent="true"
        android:paddingLeft="@dimen/bottome_left_padding"
        android:paddingRight="@dimen/bottome_left_padding"
        android:text="@string/wellcomeInfo" />

    <ImageView
        android:id="@+id/ivBottomRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/th_skippylite"
        tools:ignore="ContentDescription" />

</RelativeLayout>